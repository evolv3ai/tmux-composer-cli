{
  "name": "control-cli",
  "version": "0.1.0",
  "author": "Mike Bannister <notimpossiblemike@gmail.com>",
  "license": "MIT",
  "description": "Control CLI",
  "type": "module",
  "bin": {
    "control": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "nodemon --watch src/ --ext ts --exec tsup",
    "dev": "nodemon --watch dist/cli.js --exec 'node ./dist/cli.js --websocket'",
    "format": "prettier --write \"**/*.{js,mjs,jsx,ts,tsx,json,md,mdx,css,yml,yaml}\""
  },
  "dependencies": {
    "commander": "^12.0.0",
    "lru-cache": "^11.1.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
