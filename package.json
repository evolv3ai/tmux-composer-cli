{
  "name": "tmux-composer",
  "version": "0.1.0",
  "author": "Mike Bannister <notimpossiblemike@gmail.com>",
  "license": "MIT",
  "description": "Tmux Composer CLI",
  "type": "module",
  "bin": {
    "tmux-composer": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "nodemon --verbose --watch src/ --ext ts --exec tsup",
    "dev": "nodemon --verbose --watch dist/cli.js --exec 'node ./dist/cli.js automate-claude-old'",
    "format": "prettier --write \"**/*.{js,mjs,jsx,ts,tsx,json,md,mdx,css,yml,yaml}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "tsx e2e/index.ts",
    "test:e2e:save": "tsx e2e/index.ts --save-fixtures"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "js-yaml": "^4.1.0",
    "lru-cache": "^11.1.0",
    "zeromq": "^6.1.2",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "dedent": "^1.6.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "prompts": "^2.4.2",
    "tsup": "^8.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  }
}
